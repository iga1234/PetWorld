@page "/"
@rendermode InteractiveServer
@using PetWorld.Application.DTOs
@using PetWorld.Application.Interfaces
@inject IChatService ChatService

<div class="container mt-4">
    <div class="card">
        <div class="card-header bg-primary text-white">
            <h4 class="mb-0">Chat</h4>
        </div>
        <div class="card-body">
            <div class="chat-messages mb-3" style="height: 400px; overflow-y: auto; border: 1px solid #ccc; padding: 1rem;">
                @foreach (var message in messages)
                {
                    <div class="mb-2">
                        <strong>@message.Sender:</strong> <span style="white-space: pre-line">@message.Text</span>
                        @if (message.IterationCount.HasValue)
                        {
                            <div class="text-end">
                                <span class="badge bg-secondary">Iterations: @message.IterationCount</span>
                            </div>
                        }
                    </div>
                }
                @if (isLoading)
                {
                    <div class="text-muted">Assistant is typing...</div>
                }
            </div>

            <div class="input-group">
                <textarea @bind="userInput" class="form-control" rows="2" placeholder="Type your message..."></textarea>
                <button class="btn btn-primary" @onclick="SendMessage" disabled="@isLoading">Send</button>
            </div>
        </div>
    </div>
</div>

@code {
    private List<ChatMessage> messages = new();
    private string userInput = "";
    private string? sessionID;
    private bool isLoading = false;

    private async Task SendMessage()
    {
        if (string.IsNullOrWhiteSpace(userInput)) return;

        isLoading = true;
        var message = userInput;
        userInput = string.Empty;

        try
        {
            messages.Add(new ChatMessage("You", message));
            var response = await ChatService.ProcessMessageAsync(new ChatRequestDTO
            {
                Message = message,
                SessionId = sessionID
            });
            messages.Add(new ChatMessage("Assistant", response.Answer, response.IterationCount));
            sessionID = response.SessionId;
        }
        catch (Exception ex)
        {
            messages.Add(new ChatMessage("Error", ex.Message));
        }
        finally
        {
            isLoading = false;
        }
    }

    private record ChatMessage(string Sender, string Text, int? IterationCount = null);
}
