@page "/history"
@inject IChatService ChatService
@using PetWorld.Application.Interfaces
@using PetWorld.Domain.Entities

<div class="container mt-4">
    <div class="card">
        <div class="card-header bg-primary text-white">
            <h4 class="mb-0">Chat History</h4>
        </div>
        <div class="card-body">
            @if (history == null)
        {
            <div class="d-flex justify-content-center align-items-center py-5">
                <span>Loading history...</span>
            </div>
        }
        else if (!history.Any())
        {
            <div class="alert alert-info text-center">
                No chat history yet. Start a conversation!
            </div>
        }
        else
        {
            <table class="table table-bordered">
                <thead>
                <tr>
                    <th>Date</th>
                    <th>Question</th>
                    <th>Answer</th>
                    <th class="text-center">Iterations</th>
                </tr>
                </thead>
                <tbody>
                @foreach (var session in history)
                {
                    <tr>
                        <td class="text-nowrap">@session.CreatedAt.ToString("dd.MM.yyyy HH:mm")</td>
                        <td>@session.Question</td>
                        <td>@session.Answer</td>
                        <td class="text-center">
                            <span class="badge bg-primary">@session.IterationCount</span>
                        </td>
                    </tr>
                }
                </tbody>
            </table>
        }
        </div>
    </div>
</div>

@code {
    IEnumerable<ChatSession>? history;
    protected override async Task OnInitializedAsync()
    {
        history = await ChatService.GetHistoryAsync();
    }
    
}

